@page
@model OdontoApp.Pages.Pacientes.IndexModel
@{
    Layout = "_LayoutApp";
    ViewData["Title"] = "Pacientes";
}

<div class="container mt-4">
    <h2 class="mb-4">Listado de Pacientes</h2>

    <a class="btn btn-primary mb-3" asp-page="Create">
        <i class="bi bi-person-plus"></i> Nuevo Paciente
    </a>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Documento</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Fecha Nac.</th>
                <th>Sexo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paciente in Model.Pacientes)
            {
                <tr>
                    <td>@paciente.Documento</td>
                    <td>@paciente.Nombre</td>
                    <td>@paciente.Apellido</td>
                    <td>@paciente.FechaNacimiento.ToShortDateString()</td>
                    <td>@paciente.Sexo</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@paciente.Id" class="btn btn-sm btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-page="Delete" asp-route-id="@paciente.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
