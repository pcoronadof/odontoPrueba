<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - OdontoApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f0f2f5;
        }

        .sidebar {
            position: fixed;
            width: 240px;
            height: 100vh;
            background-color: #1f2937; /* gris oscuro */
            color: #ffffff;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar h4 {
                font-weight: bold;
                text-align: center;
                color: #93c5fd; /* azul claro */
                margin-bottom: 30px;
            }

        .nav-link {
            color: #d1d5db;
            padding: 12px 20px;
            font-size: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            transition: background-color 0.2s, color 0.2s;
        }

            .nav-link:hover {
                background-color: #374151;
                color: #ffffff;
            }

            .nav-link.active {
                background-color: #2563eb;
                color: #ffffff;
            }

        .nav-icon {
            font-size: 1.2rem;
        }

        .sidebar-footer {
            padding: 15px;
            text-align: center;
            font-size: 0.9rem;
            color: #9ca3af;
        }

        .main-content {
            margin-left: 240px;
            padding: 30px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div>
            <h4>OdontoApp</h4>
            <a href="/Dashboard" class="nav-link @(Context.Request.Path.StartsWithSegments("/Dashboard") ? "active" : "")">
                <i class="bi bi-house-door nav-icon"></i> Dashboard
            </a>
            <a href="/Pacientes" class="nav-link @(Context.Request.Path.StartsWithSegments("/Pacientes") ? "active" : "")">
                <i class="bi bi-person-lines-fill nav-icon"></i> Pacientes
            </a>
            <a href="/Atenciones" class="nav-link @(Context.Request.Path.StartsWithSegments("/Atenciones") ? "active" : "")">
                <i class="bi bi-journal-medical nav-icon"></i> Atenciones
            </a>
            <a href="/" class="nav-link">
                <i class="bi bi-box-arrow-right nav-icon"></i> Salir
            </a>
        </div>
        <div class="sidebar-footer">
            &copy; 2025 OdontoApp
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
